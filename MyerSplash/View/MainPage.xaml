<common:BindablePage
    x:Class="MyerSplash.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="using:JP.Utils.Control"
    xmlns:attach="using:JP.Utils.Framework"
    xmlns:common="using:MyerSplash.Common"
    xmlns:control="using:MyerSplashCustomControl"
    xmlns:uc="using:MyerSplash.UC"
    xmlns:model="using:MyerSplash.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="{StaticResource MyerSplashThemeColor}"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{StaticResource MyerSplashDarkColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" x:Name="ContentGrid">
            <control:AdaptiveGridView
                x:Name="ImageGridView"
                ItemsSource="{x:Bind MainVM.DataVM.DataList,Mode=OneWay}"
                SelectionMode="None"
                Margin="0"
                IsItemClickEnabled="True"
                ItemClick="ImageGridView_ItemClick"
                ShowsScrollingPlaceholders="False"
                attach:ScrollViewerStyleChanger.Style="{StaticResource ScrollViewerCommonStyle}"
                MinItemHeight="200"
                MinItemWidth="300">
                <control:AdaptiveGridView.ItemTemplate>
                    <DataTemplate x:DataType="model:UnSplashImage">
                        <Grid>
                            <Border Background="{StaticResource MyerSplashPlaceHolderColor}"/>
                            <Image Source="{x:Bind ListImageBitmap,Mode=OneWay}" Stretch="UniformToFill"/>
                        </Grid>
                    </DataTemplate>
                </control:AdaptiveGridView.ItemTemplate>
                <control:AdaptiveGridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                        <Setter Property="HorizontalAlignment"
                            Value="Stretch" />
                        <Setter Property="VerticalContentAlignment"
                            Value="Stretch" />
                        <Setter Property="VerticalAlignment"
                            Value="Stretch" />
                        <Setter Property="Margin"
                            Value="0" />
                    </Style>
                </control:AdaptiveGridView.ItemContainerStyle>
                <control:AdaptiveGridView.Footer>
                    <Grid Height="50" Visibility="{x:Bind MainVM.ShowFooterLoading,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ProgressRing IsActive="True" Foreground="{StaticResource MyerSplashThemeDarkColor}"/>
                            <TextBlock Text="LOADING..." Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </control:AdaptiveGridView.Footer>
            </control:AdaptiveGridView>
            <Button x:Name="RefreshBtn" HorizontalAlignment="Right" VerticalAlignment="Bottom" Command="{x:Bind MainVM.RefreshCommand,Mode=OneWay}" Margin="20" Style="{StaticResource ButtonCommonStyle}" Foreground="White" Background="{x:Null}" Grid.RowSpan="2">
                <Grid Width="50" Height="50">
                    <Ellipse Width="50" Height="50" Fill="{StaticResource MyerSplashThemeColor}"/>
                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
                </Grid>
            </Button>
            <Grid x:Name="LoadingGrid" HorizontalAlignment="Center" VerticalAlignment="Top" >
                <Ellipse Width="50" Height="50" Fill="#FFE5E5E5"/>
                <SymbolIcon x:Name="RefreshSymbol" RenderTransformOrigin="0.5 0.5" Symbol="Refresh" Foreground="{StaticResource MyerSplashThemeDarkColor}"/>
            </Grid>
        </Grid>
        <Grid x:Name="TitleGrid" Background="{StaticResource MyerSplashThemeColor}">
            <StackPanel Tapped="StackPanel_Tapped" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Myer" FontSize="25"/>
                <Image Height="30" Source="ms-appx:///Assets/Icon/Logo_black.png" Margin="-7,3,-7,0"/>
                <TextBlock Text="plash" FontSize="25" FontWeight="Bold"/>
            </StackPanel>
            <uc:HamburgerButton Command="{x:Bind MainVM.OpenDrawerCommand,Mode=OneWay}" HorizontalAlignment="Left" Width="70" Background="White"/>
            <Button Style="{StaticResource ButtonCommonStyle2}" Background="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="70">
                <Border>
                    <SymbolIcon Symbol="Zoom"/>
                </Border>
            </Button>
        </Grid>
        <Grid x:Name="DetailGrid" d:IsHidden="True"  Margin="0 5 0 0" Grid.RowSpan="5" SizeChanged="DetailGrid_SizeChanged">
            <Border x:Name="MaskBorder" Tapped="MaskBorder_Tapped" Background="Black" Opacity="0.8"/>
            <Grid x:Name="DetailContentGrid" MaxWidth="600" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Image x:Name="LargeImage" Stretch="UniformToFill"/>
                <Grid x:Name="InfoGrid" Grid.Row="1">
                    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock x:Name="ByTB" Text="by" Foreground="#CCFFFFFF" FontSize="12"/>
                        <TextBlock x:Name="NameTB" Text="JuniperPhoton" Foreground="#CCFFFFFF" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
                <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,75" Grid.RowSpan="2">
                    <Button x:Name="LoadingHintBtn" IsEnabled="True" Style="{StaticResource ButtonCommonStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Grid.RowSpan="2" Background="{x:Null}">
                        <Grid>
                            <Ellipse Width="50" Height="50" Fill="{StaticResource MyerSplashThemeColor}"/>
                            <ProgressRing IsActive="True" Foreground="White"/>
                        </Grid>
                    </Button>
                    <Button x:Name="OKBtn" IsEnabled="False" Style="{StaticResource ButtonCommonStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Grid.RowSpan="2" Background="{x:Null}">
                        <Grid>
                            <Ellipse Width="50" Height="50" Fill="{StaticResource MyerSplashThemeColor}"/>
                            <SymbolIcon Symbol="Accept" Foreground="White"/>
                        </Grid>
                    </Button>
                    <Button x:Name="DownloadBtn" Click="DownloadBtn_Click" Style="{StaticResource ButtonCommonStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Grid.RowSpan="2" Background="{x:Null}">
                        <Grid>
                            <Ellipse Width="50" Height="50" Fill="{StaticResource MyerSplashThemeColor}"/>
                            <SymbolIcon Symbol="Download" Foreground="White"/>
                        </Grid>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <Border x:Name="DrawerMaskBorder" d:IsHidden="True" attach:UIElementTapCommand.ItemTapCommand="{x:Bind MainVM.OpenDrawerCommand,Mode=OneWay}" Background="#CC000000" Grid.RowSpan="2"/>
        <uc:DrawerControl x:Name="DrawerControl" d:IsHidden="True" DataContext="{x:Bind MainVM,Mode=OneWay}" Grid.RowSpan="2" Width="300" HorizontalAlignment="Left"/>
    </Grid>
</common:BindablePage>
