<common:BindablePage
    x:Class="MyerSplash.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="using:JP.Utils.Control"
    xmlns:attach="using:JP.Utils.Framework"
    xmlns:common="using:MyerSplash.Common"
    xmlns:control="using:MyerSplashCustomControl"
    xmlns:uc="using:MyerSplash.UC"
    xmlns:model="using:MyerSplash.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="Black">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="TitleGrid" Background="{StaticResource MyerSplashThemeColor}">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Myer" FontSize="20"/>
                <TextBlock Text="Splash" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text=" (ALPHA)" FontSize="12" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
            </StackPanel>
            <uc:HamburgerButton HorizontalAlignment="Left" Width="70" Background="White"/>
        </Grid>
        <Grid Grid.Row="1">
            <uc:ImageListControl DataContext="{x:Bind MainVM,Mode=OneWay}"/>
            <Button x:Name="RefreshBtn" HorizontalAlignment="Right" VerticalAlignment="Bottom" Command="{x:Bind MainVM.RefreshCommand,Mode=OneWay}" Margin="20" Style="{StaticResource ButtonCommonStyle}" Foreground="White" Background="{x:Null}">
                <Grid Width="50" Height="50">
                    <Ellipse Width="50" Height="50" Fill="{StaticResource MyerSplashThemeColor}"/>
                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
                </Grid>
            </Button>
            <!--<Grid x:Name="LoadingGrid" HorizontalAlignment="Center" VerticalAlignment="Top" >
                <Ellipse Width="50" Height="50" Fill="#FFE5E5E5"/>
                <SymbolIcon x:Name="RefreshSymbol" RenderTransformOrigin="0.5 0.5" Symbol="Refresh" Foreground="{StaticResource PlantSitterThemeColor}"/>
            </Grid>-->
        </Grid>
    </Grid>
</common:BindablePage>
